<div class="container">
    <!-- Search Bar -->
    <div class="search-container mb-4">
        <div class="dropdown">
            <input type="text" id="class-search" class="form-control" placeholder="Search for a class..."
                autocomplete="off">
            <div id="search-dropdown" class="dropdown-menu" style="display: none;"></div>
        </div>
    </div>



    <!-- Main Content Layout with Bootstrap Grid -->
    <div class="row">
        <!-- Current Study Buddies Column -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Current Study Buddies</h3>
                    <div class="buddy-list">
                        <!-- Current study buddies will be displayed here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Suggested Study Buddies Column -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Suggested Study Buddies</h3>
                    <div class="suggested-list">
                        <!-- Suggested study buddies will be displayed here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Incoming Requests Column -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Incoming Requests</h3>
                    <div class="request-list">
                        <!-- Incoming requests will be displayed here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/classSearch.js"></script>